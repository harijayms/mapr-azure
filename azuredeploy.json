{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters" : {
        "clusterName": {
            "defaultValue": "mapraz",
            "type": "string",
            "metadata": {
                 "description": "Unique name for deployed MapR cluster.  Must be all lower case letters or numbers; no spaces or special characters."
            }
        },
        "clusterSize": {
            "defaultValue": 3,
            "type": "int"
        },
        "clusterEdition": {
            "defaultValue": "M3",
            "type": "string",
            "allowedValues": ["M3", "M5", "M7"],
            "metadata": {
                 "description": "MapR License Edition {Community, Enterprise, or Enterprise Database}"
            }
        },
        "adminUserName": {
            "defaultValue": "azadmin",
            "type": "string"
        },
        "adminPassword": {
            "defaultValue": "MapRAzur3",
            "type": "securestring"
        },
        "location": {
            "type": "string",
            "defaultValue" : "West US",
            "allowedValues": ["East US", "West US", "West Europe", "East Asia", "South East Asia"],
            "metadata": {
                "description": "Deployment location"
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D12",
            "allowedValues": ["Standard_D3", "Standard_D4", "Standard_D12", "Standard_D13", "Standard_D14", "Standard_DS3", "Standard_DS4", "Standard_DS12", "Standard_DS13", "Standard_DS14"]
        }
    },
    "variables": {
        "imagePublisher" : "OpenLogic",
        "imageOffer" : "CentOS",
        "imageSKU" : "7.0",        
        "scriptsUri" : "https://rgmaprarm.blob.core.windows.net/arm/",
        "nicBasename": "[concat(parameters('clusterName'),'-nic')]",
        "publicIPAddressBasename": "[concat(parameters('clusterName'),'-publicIP')]",
        "storageAccountBasename": "[concat(parameters('clusterName'),'sa')]",
        "networkSpec" : {
            "vnetCIDR":"10.0.0.0/16",
            "subnet1Name": "Privnet-1",
            "subnet1CIDR" : "10.0.0.0/24"
        },
        "publicIPAddressType" : "Dynamic",
        "storageAccountType": "Standard_LRS",
        "vnetID":"[resourceId('Microsoft.Network/virtualNetworks',concat(parameters('clusterName'), '-vnet'))]",
        "subnet1Ref" : "[concat(variables('vnetID'),'/subnets/',variables('networkSpec').subnet1Name)]"
    },
    "resources": [
    {
        "name": "network",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(variables('scriptsUri'), 'network.json')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "clusterSize" : {
                    "value": "[parameters('clusterSize')]"
                },
                "clusterName" : {
                    "value": "[parameters('clusterName')]"
                },
                "location" : {
                    "value": "[parameters('location')]"
                },
                "publicIPAddressBasename" : {
                    "value" : "[variables('publicIPAddressBasename')]"
                },
                "publicIPAddressType": {
                    "value": "[variables('publicIPAddressType')]"
                },
                "networkSpec" : {
                    "value" : "[variables('networkSpec')]"
                },
                "nicBasename" : {
                    "value" : "[variables('nicBasename')]"
                },
                "subnet1Ref" : {
                    "value" : "[variables('subnet1Ref')]"
                }
            }
        }
    },
    {
        "name": "vms",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2015-01-01",
        "dependsOn": [
            "['Microsoft.Resources/deployments/network']"
        ],        
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[concat(variables('scriptsUri'), parameters('vmSize'), '.json')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "clusterSize" : {
                    "value": "[parameters('clusterSize')]"
                },
                "clusterName" : {
                    "value": "[parameters('clusterName')]"
                },
                "scriptsUri" : {
                    "value": "[variables('scriptsUri')]"
                },
                "adminUsername" : {
                    "value": "[parameters('adminUsername')]"
                },
                "adminPassword" : {
                    "value": "[parameters('adminPassword')]"
                },
                "imagePublisher" : {
                    "value": "[variables('imagePublisher')]"
                },
                "imageOffer" : {
                    "value": "[variables('imageOffer')]"
                },
                "imageSKU" : {
                    "value": "[variables('imageSKU')]"
                },
                "location" : {
                    "value": "[parameters('location')]"
                },
                "storageAccountBasename" : {
                    "value" : "[variables('storageAccountBasename')]"
                },
                "nicBasename" : {
                    "value" : "[variables('nicBasename')]"
                }
            }
        }
    },    
    {
        "apiVersion": "2015-05-01-preview",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[concat(variables('nicBasename'), '0')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "['Microsoft.Resources/deployments/network']"
        ],
        "properties": {
            "ipConfigurations": [
            {
                "name": "ipconfig1",
                "properties": {
                    "subnet": {
                        "id": "[variables('subnet1Ref')]"
                    },
                    "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressBasename'))]"
                    }
                }
            }
            ]
        }
    }
    ],
    "outputs": {
        "vms": {
            "type": "string",
            "value": "[concat(variables('scriptsUri'), parameters('vmSize'), '.json')]"
        }
    }    
}